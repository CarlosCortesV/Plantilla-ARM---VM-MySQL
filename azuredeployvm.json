{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0", 
    "parameters": {
      "vmName": {
        "minLength": 3,
        "maxLength": 24,
        "type": "String",
        "metadata": {
          "description":"Nombre de la VM."
        }
      },
      "adminUsername": {
        "type": "String",
        "metadata": {
          "description": "Nombre admin para máquina virtual."
        }
      },
      "adminPassword": {
        "minLength": 12,
        "type": "SecureString", // Para mayor seguridad
        "metadata": {
          "description": "Password admin para máquina virtual"
        }
      },
      "location": {
        "defaultValue": "EastUS", // El recurso heredara por defecto la zona del grupo de recursos
        "type": "String",
        "metadata": {
          "description": "Localización del recurso."
        }
      },
      "vmSize": {
        "defaultValue": "Standard_D4ds_v4",
        "type": "String",
        "metadata": {
          "description": "Tamaño de la familia."
        }
      },
      "privateIPAllocationMethod":{
        "type": "String",
        "defaultValue":"Dynamic",
        "allowedValues": [
          "Dynamic",
          "Static"
        ],
        "metadata": {
          "description": "Método de asignación de IP privada (Dynamic o Static)."
        }
      },
      "resourceTags": {
        "type": "object",
        "defaultValue": {
          "Ambiente": "Productivo",
          "Responsable": "Carlos C"
        },
        "metadata": {
          "description": "Etiquetas"
        }
      }
    },
    "variables": {
      "virtualNetworks": "vnet-srvlinux-prd",
      "publicIpAddresses": "vm-clubenland-prod-ip",
      "addressPrefix": "10.0.0.0/16",
      "subnetName": "snet-srvlinux-prd",
      "subnetPrefix": "10.0.0.0/24",
      "nSecurityGroups": "vm-clubenland-prod-nsg"
    },
    "resources": [
      {
        "type": "Microsoft.Network/publicIpAddresses",
        "apiVersion": "2019-02-01",
        "name": "[variables('publicIpAddresses')]",
        "location": "[parameters('location')]",
        "tags": "[parameters('resourceTags')]",
        "properties": {
          "publicIPAllocationMethod": "[parameters('privateIPAllocationMethod')]"
        }
      },
      {
        "type": "Microsoft.Network/virtualNetworks",
        "apiVersion": "2019-04-01",
        "name": "[variables('virtualNetworks')]",
        "location": "[parameters('location')]",
        "tags": "[parameters('resourceTags')]",
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[variables('addressPrefix')]"
            ]
          },
          "subnets": [
            {
              "name": "[variables('subnetName')]",
              "properties": {
                "addressPrefix": "[variables('subnetPrefix')]"
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/networkSecurityGroups",
        "apiVersion": "2021-02-01",
        "name": "[variables('nSecurityGroups')]",
        "location": "[parameters('location')]",
        "tags": "[parameters('resourceTags')]",
        "properties": {
          "securityRules": [
            {
              "name": "AllowSSH",
              "properties": {
                "priority": 300,
                "protocol": "Tcp",
                "access": "Allow",
                "direction": "Inbound",
                "sourceAddressPrefix": "*",
                "sourcePortRange": "*",
                "destinationAddressPrefix": "*",
                "destinationPortRange": "22"
              }
            },
                        {
              "name": "AllowCustomPort",
              "properties": {
                "priority": 310,
                "protocol": "Tcp",
                "access": "Allow",
                "direction": "Inbound",
                "sourceAddressPrefix": "*",
                "sourcePortRange": "*",
                "destinationAddressPrefix": "*",
                "destinationPortRange": "57032"
              }
            },
            {
              "name": "AllowHTTP",
              "properties": {
                "priority": 320,
                "protocol": "Tcp",
                "access": "Allow",
                "direction": "Inbound",
                "sourceAddressPrefix": "*",
                "sourcePortRange": "*",
                "destinationAddressPrefix": "*",
                "destinationPortRange": "80"
              }
            },
            {
              "name": "AllowHTTPS",
              "properties": {
                "priority": 330,
                "protocol": "Tcp",
                "access": "Allow",
                "direction": "Inbound",
                "sourceAddressPrefix": "*",
                "sourcePortRange": "*",
                "destinationAddressPrefix": "*",
                "destinationPortRange": "443"
              }
            }
          ]
        }
      },
      {
        "type": "Microsoft.Network/networkInterfaces",
        "apiVersion": "2019-02-01",
        "name": "vm-clubenland-intred",
        "location": "[parameters('location')]",
        "tags": "[parameters('resourceTags')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/virtualNetworks', variables('virtualNetworks'))]",
          "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddresses'))]",
          "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nSecurityGroups'))]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "name": "ipconfig1",
              "properties": {
                "privateIPAllocationMethod": "[parameters('privateIPAllocationMethod')]",
                "subnet": {
                  "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworks'), variables('subnetName'))]"
                },
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddresses'))]"
                }
              }
            }
          ],
          "networkSecurityGroup": {
            "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nSecurityGroups'))]"
          }
        }
      },
      {
        "type": "Microsoft.Compute/virtualMachines",
        "apiVersion": "2021-04-01",
        "name": "[parameters('vmName')]",
        "location": "[parameters('location')]",
        "tags": "[parameters('resourceTags')]",
        "dependsOn": [
          "[resourceId('Microsoft.Network/networkInterfaces', 'vm-clubenland-intred')]",
          "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nSecurityGroups'))]"
        ],
        "properties": {
          "hardwareProfile": {
            "vmSize": "[parameters('vmSize')]"
          },
          "storageProfile": {
            "imageReference": {
              "publisher": "RedHat",
              "offer": "RHEL",
              "sku": "93-gen2",
              "version": "latest",
              "exactVersion": "9.3.2023110915"
            },
            "osDisk": {
              "createOption": "fromImage",
              "managedDisk": {
                "storageAccountType": "StandardSSD_LRS"
              },
              "diskSizeGB": 64, // Tamaño del disco adicional en GB
              "name": "osdisk-vm-clubgenland-prod" 
            }, //Creación de un disco adicional
            "dataDisks": [
              {
                "name": "datadisk-vm-clubgenland-prod",
                "lun": 0,
                "createOption": "Empty", 
                "managedDisk": {
                  "storageAccountType": "StandardSSD_LRS"
                  //Crear un párametro para que implemente el nombre como: datadisk_varaible(Nombre VM)
                },
                  "diskSizeGB": 128 // Tamaño del disco adicional en GB
                }
            ]
          },
          
          "osProfile": {
            "computerName": "[parameters('vmName')]",
            "adminUsername": "[parameters('adminUsername')]",
            "adminPassword": "[parameters('adminPassword')]"
          },
          "securityProfile": { //Inicio seguro
            "uefiSettings": {
                "secureBootEnabled": true,
                "vTpmEnabled": true
            },
            "securityType": "TrustedLaunch"
        },
          "networkProfile": {
            "networkInterfaces": [
              {
                "id": "[resourceId('Microsoft.Network/networkInterfaces', 'vm-clubenland-intred')]"
              }
            ]
          }
        }
      }
    ]
  }